<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{ISO8601}[thread=%thread][%-5level] %logger{50} - %msg%n</pattern>
        </encoder>
        <target>System.err</target>
    </appender>
    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>
    <logger name="io.grpc.netty.shaded.io.netty" level="info">
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="io.grpc.netty.shaded.io.grpc" level="info">
        <appender-ref ref="STDOUT" />
    </logger>
</configuration>
